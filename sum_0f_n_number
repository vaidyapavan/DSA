package dsa;
import java.util.*;


class sum_of_n_number
{
	int sum=0;
	int check(int n)
	{
		for(int i=0;i<n;i++)
		{
			sum=sum+i;
		}
		return sum;
		
		
	}
}
public class Sum_of_n_number {

	public static void main(String[] args) {
		sum_of_n_number obj =new sum_of_n_number();
		
		Scanner s= new Scanner(System.in);
		int no= s.nextInt();
		obj.check(10);
		
		
		
	}

}
